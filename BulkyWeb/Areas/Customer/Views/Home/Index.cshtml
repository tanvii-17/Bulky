@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm rounded-4 h-100 d-flex flex-column fancy-card">
                <img src="@product.ImageUrl" class="card-img-top rounded-4 hover-zoom" alt="@product.Title" />
                <div class="card-body d-flex flex-column p-4">
                    <h5 class="card-title text-dark opacity-75 text-uppercase text-center">@product.Title</h5>
                    <p class="card-text text-warning text-center">by <b>@product.Author</b></p>

                    <p class="text-dark text-opacity-75 text-center mb-1">List Price: <span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span></p>
                    <p class="text-dark text-opacity-75 text-center flex-grow-1">As low as: <span>@product.Price100.ToString("c")</span></p>

                    <a asp-controller="Home" asp-action="Details" asp-route-id="@product.Id" class="btn btn-teal border-0 mt-auto fancy-button">Details</a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* Card background gradient & shadow effects */
    .fancy-card {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        transition: transform 0.2s ease-in-out;
    }

    /* Image hover effect */
    .hover-zoom {
        transition: transform 0.3s ease-in-out;
    }

        .hover-zoom:hover {
            transform: scale(1.05);
        }

    /* Card hover effect */
    .fancy-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    /* Fancy button */
    .btn-teal {
        background: linear-gradient(45deg, #008080, #20c997);
        color: white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        transition: background 0.2s;
    }

        .btn-teal:hover {
            background: linear-gradient(45deg, #20c997, #008080);
        }
</style>
