@model Product

<form method="post">
    <div class="card shadow-lg border-0 mt-3 rounded-4 fancy-card">
        <div class="card-header bg-gradient text-light py-3 rounded-top-4 fancy-header">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase m-0">@Model.Title</h3>
                    <p class="text-white-50 fw-semibold mb-0">by @Model.Author</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row mb-3">
                    <div class="col-6 col-md-2 offset-lg-1">
                        <a asp-action="Index" class="btn btn-outline-primary bg-gradient fw-semibold btn-sm text-uppercase">
                            <small>Back to Home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageUrl" width="100%" class="rounded-4 shadow-sm hover-zoom" alt="Product Image" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">
                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge rounded-pill bg-danger">@Model.Category.Name</span>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-75">ISBN: <span class="fw-bold">@Model.ISBN</span></h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-75 pb-2">
                                List Price:
                                <span class="text-decoration-line-through">@Model.ListPrice.ToString("c")</span>
                            </h6>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-light border-bottom">
                                <div class="text-dark text-opacity-75 fw-semibold">Quantity</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-light border-bottom">
                                <div class="text-dark text-opacity-75 fw-semibold">1-50</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-light border-bottom">
                                <div class="text-dark text-opacity-75 fw-semibold">51-100</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-light border-bottom">
                                <div class="text-dark text-opacity-75 fw-semibold">100+</div>
                            </div>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-light text-success fw-bold">
                                <div>Price</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-light text-success fw-bold">
                                <div>@Model.Price.ToString("c")</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-light text-success fw-bold">
                                <div>@Model.Price50.ToString("c")</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-light text-success fw-bold">
                                <div>@Model.Price100.ToString("c")</div>
                            </div>
                        </div>
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm">@Model.Description</p>
                        </div>
                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold">
                                        Count
                                    </span>
                                    <input type="number" value="1" class="form-control text-end" min="1" max="100" />

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" disabled
                                        class="btn btn-primary bg-gradient w-100 py-2 text-uppercase fw-semibold disabled-button">
                                    Add to Cart (Coming Soon...)
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<style>
    .fancy-header {
        background: linear-gradient(135deg, #1f3d7a, #4a7eff);
    }

    .fancy-card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .fancy-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        }

    .hover-zoom {
        transition: transform 0.3s ease-in-out;
    }

        .hover-zoom:hover {
            transform: scale(1.05);
        }

    .btn-outline-primary {
        border-color: #4a7eff;
        color: #4a7eff;
        transition: all 0.3s ease;
    }

        .btn-outline-primary:hover {
            background-color: #4a7eff;
            color: #fff;
        }

    .badge {
        background-color: #ff4757;
        color: #fff;
    }

    .disabled-button {
        cursor: not-allowed;
        background: linear-gradient(45deg, #6c757d, #adb5bd);
    }

    .text-opacity-75 {
        opacity: 0.75;
    }

    .text-opacity-50 {
        opacity: 0.5;
    }
</style>
